<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CommunityConnect.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CommunityConnect"
    xmlns:Pages="clr-namespace:CommunityConnect.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="CommunityConnect"
    Shell.NavBarIsVisible="False">

   
    <TabBar >
        <ShellContent Title="Home"
                      ContentTemplate="{DataTemplate Pages:LandingPage}"
                      Icon="home_icon.png"
                      Route="Home" />
        <ShellContent Title="Settings"
                      ContentTemplate="{DataTemplate Pages:SettingsPage}"
                      Icon="setting.png"
                      Route="Settings" />
        <ShellContent Title="Alerts"
                      ContentTemplate="{DataTemplate Pages:AlertsPage}"
                      Icon="alert.png"
                      Route="Alerts" />
        <ShellContent Title="Forum"
                      ContentTemplate="{DataTemplate Pages:ForumPage}"
                      Icon="chat.png"
                      Route="Forum" />
    </TabBar>



</Shell>
