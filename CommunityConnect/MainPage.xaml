<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommunityConnect.MainPage">

    <ContentPage.Background>
        <LinearGradientBrush EndPoint="1,1">
            <GradientStop Color="#4e7c9e" Offset="0.1" />
            <GradientStop Color="#1c2c38" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <!-- This page should hold the main page with the menus-->
    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">
            <Label Text="CommunityConnect Menu" FontSize="25"
                   Style="{StaticResource Heading1}"
                   HorizontalOptions="Center" />

            
            <HorizontalStackLayout Margin="0, 0, 0, 10" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                <Frame 
                    CornerRadius="5" 
                    HeightRequest="100" 
                    WidthRequest="110" 
                    HorizontalOptions="Center"
                    BackgroundColor="#4e7c9e">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnTappedIncidentReport" />
                    </Frame.GestureRecognizers>
                    <VerticalStackLayout
                        HorizontalOptions="Center">
                        <Image Source="{Binding Icon}" HeightRequest="50" />
                        <Label Text="{Binding Name}"
                          HorizontalOptions="Center"
                           FontAttributes="Bold"
                          FontSize="14" />
                       </VerticalStackLayout>
                          </Frame>
                <Frame 
                    WidthRequest="110"
                   HeightRequest="100"
                   CornerRadius="5"
Margin="20"
BackgroundColor="#4e7c9e">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnTappedAlerts" />
                    </Frame.GestureRecognizers>
                    <StackLayout HorizontalOptions="Center">
                        <Image Source="{Binding Icon}" HeightRequest="50" />
                        <Label Text="{Binding Name}"
        HorizontalOptions="Center"
        FontAttributes="Bold"
        FontSize="14" />
                    </StackLayout>
                </Frame>

            </HorizontalStackLayout>

            
            <!--    <CollectionView ItemsSource="{Binding MenuItems}"
                            SelectionMode="None">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Span="2" Orientation="Vertical" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView> -->
        </VerticalStackLayout>
    </ScrollView>
    
    
</ContentPage>
