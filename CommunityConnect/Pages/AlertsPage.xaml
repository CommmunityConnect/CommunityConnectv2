<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommunityConnect.Pages.AlertsPage"
             Title="Real-Time Alerts"
             BackgroundColor="White">
    <ContentPage.Background>
        <LinearGradientBrush EndPoint="1,1">
            <GradientStop Color="#4e7c9e" Offset="0.1" />
            <GradientStop Color="#1c2c38" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="ðŸš¨ Real-Time Alerts" 
               FontSize="24" 
               TextColor="Red"
               HorizontalOptions="Center"/>

        <ListView x:Name="AlertsListView"
          ItemsSource="{Binding Alerts}"
          HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Frame BackgroundColor="White" Padding="10" CornerRadius="12" BorderColor="Gray" HasShadow="True" Margin="0,10">
                            <!-- Add margin here -->
                            <VerticalStackLayout>
                                <Label Text="{Binding Title}" FontSize="20" TextColor="Red" FontAttributes="Bold"/>
                                <Label Text="{Binding Location}" FontSize="16" TextColor="Black"/>
                                <Label Text="{Binding TimeReported}" FontSize="14" TextColor="Gray"/>
                            </VerticalStackLayout>
                        </Frame>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </VerticalStackLayout>
</ContentPage>
