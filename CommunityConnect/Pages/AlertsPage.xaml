<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommunityConnect.Pages.AlertsPage"
             Shell.NavBarIsVisible="True"
             Title="Community Alerts">
    <ContentPage.Background>
        <LinearGradientBrush EndPoint="1,1">
            <GradientStop Color="#4e7c9e" Offset="0.1" />
            <GradientStop Color="#1c2c38" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>
    <StackLayout Padding="20">
        <Label Text="ðŸ“¢ Community Alerts" 
               TextColor="White" 
               FontAttributes="Bold" 
               FontSize="26" 
               HorizontalOptions="Center"
               Margin="0,0,0,20"/>
        <ListView ItemsSource="{Binding ApprovedReports}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10">
                            <Label Text="{Binding Title}" FontSize="20" />
                            <Label Text="{Binding Description}" FontSize="14" />
                            <Label Text="{Binding Location}" FontSize="14" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </StackLayout>
</ContentPage>