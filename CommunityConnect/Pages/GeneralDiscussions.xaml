<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CommunityConnect.ViewModel"
             Shell.NavBarIsVisible="True"
             x:Class="CommunityConnect.Pages.GeneralDiscussions">
    <ContentPage.Background>
        <LinearGradientBrush EndPoint="1,1">
            <GradientStop Color="#4e7c9e" Offset="0.1" />
            <GradientStop Color="#1c2c38" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ContentPage.BindingContext>
        <vm:GeneralDiscussionsViewModel />
    </ContentPage.BindingContext>
    <ScrollView>
        <StackLayout Padding="20">
            <Label Text="ðŸ’¬ General Discussions" TextColor="white" FontAttributes="Bold" FontSize="26" HorizontalOptions="Center" Margin="0,10,0,20"/>
            <!-- Post Input Section -->
            <Frame BackgroundColor="White" CornerRadius="15" Padding="15" HasShadow="True">
                <VerticalStackLayout Spacing="10">
            <Entry Placeholder="What's on your mind?" Text="{Binding NewPostContent}"  BackgroundColor="#f5f5f5f5" 
                   TextColor="#1c2c38" HeightRequest="45" BindingContext="10"/>
            <Button Text="Post" Command="{Binding PostCommand}" BackgroundColor="#4e7c9e"
                    TextColor="white" CornerRadius="10" HeightRequest="45"/>
                </VerticalStackLayout>
            </Frame>
            <!-- Posts Section -->
            <CollectionView ItemsSource="{Binding Posts}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#5a89b2"
                               CornerRadius="15"
                               Padding="15"
                               HasShadow="True"
                               Margin="5,10">
                            <VerticalStackLayout Spacing="10">

                                <!-- Post Content -->
                                <Label Text="{Binding Content}"
                                       FontSize="18"
                                       TextColor="White"/>

                                <!-- Comments Section -->
                                <CollectionView ItemsSource="{Binding Comments}">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Frame BackgroundColor="White"
                                                   CornerRadius="10"
                                                   Padding="10"
                                                   Margin="5,0">
                                                <Label Text="{Binding Content}"
                                                       FontSize="14"
                                                       TextColor="#1c2c38"/>
                                            </Frame>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>

                                <!-- Add Comment -->
                                <HorizontalStackLayout Spacing="10">
                                    <Entry Placeholder="Write a comment..."
                                           Text="{Binding NewCommentContent}"
                                           BackgroundColor="White"
                                           TextColor="#1c2c38"
                                            
                                           HeightRequest="40"
                                           HorizontalOptions="FillAndExpand"/>

                                    <Button Text="Send"
                                            Command="{Binding CommentCommand}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="White"
                                            TextColor="#4e7c9e"
                                            CornerRadius="10"
                                            WidthRequest="80"/>
                                </HorizontalStackLayout>

                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </StackLayout>
    </ScrollView>
</ContentPage>
