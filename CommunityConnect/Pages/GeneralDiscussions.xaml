<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Shell.NavBarIsVisible="True"
             x:Class="CommunityConnect.Pages.GeneralDiscussions">
    <ContentPage.Background>
        <LinearGradientBrush EndPoint="1,1">
            <GradientStop Color="#4e7c9e" Offset="0.1" />
            <GradientStop Color="#1c2c38" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <StackLayout Padding="20">
            <Label Text="ðŸ’¬ General Discussions" 
                   TextColor="white" 
                   FontAttributes="Bold" 
                   FontSize="26" 
                   HorizontalOptions="Center" 
                   Margin="0,10,0,20"/>

            <!-- Post Input Section -->
            <Frame BackgroundColor="White" 
                   CornerRadius="15" 
                   Padding="15" 
                   HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Entry x:Name="NewPostContentEntry" 
                           Placeholder="What's on your mind?" 
                           BackgroundColor="#f5f5f5" 
                           TextColor="#1c2c38" 
                           HeightRequest="50" 
                           Margin="0,0,0,10"/>
                    <Button Text="Post" 
                            Clicked="OnPostClicked" 
                            BackgroundColor="#4e7c9e" 
                            TextColor="white" 
                            CornerRadius="10" 
                            HeightRequest="45"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Posts Section -->
            <CollectionView x:Name="PostsCollectionView" 
                            ItemsSource="{Binding Posts}" 
                            Margin="0,20,0,0">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#5a89b2"
                               CornerRadius="15"
                               Padding="15"
                               HasShadow="True"
                               Margin="5,10">
                            <VerticalStackLayout Spacing="10">
                                <!-- Post Content -->
                                <Label Text="{Binding Content}" 
                                       FontSize="18" 
                                       TextColor="White" 
                                       LineBreakMode="WordWrap"/>
                                <Label Text="{Binding CreatedAt, StringFormat='Posted on: {0:MM/dd/yyyy}'}" 
                                       FontSize="12" 
                                       TextColor="lightgray"/>

                                <!-- Comments Section -->
                                <CollectionView ItemsSource="{Binding Comments}">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Frame BackgroundColor="White"
                                                   CornerRadius="10"
                                                   Padding="10"
                                                   Margin="5,10">
                                                <VerticalStackLayout>
                                                    <Label Text="{Binding Content}" 
                                                           FontSize="14" 
                                                           TextColor="#1c2c38"/>
                                                    <HorizontalStackLayout Spacing="10">
                                                        <Button Text="Like"
                                                                Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, Path=BindingContext.LikeCommand}"
                                                                CommandParameter="{Binding .}"
                                                                BackgroundColor="Transparent"
                                                                TextColor="#4e7c9e"/>
                                                        <Button Text="Reply"
                                                                Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, Path=BindingContext.ReplyCommand}"
                                                                CommandParameter="{Binding .}"
                                                                BackgroundColor="Transparent"
                                                                TextColor="#4e7c9e"/>
                                                    </HorizontalStackLayout>
                                                    <Label Text="{Binding LikeCount}" 
                                                           FontSize="12" 
                                                           TextColor="#1c2c38"/>
                                                </VerticalStackLayout>
                                            </Frame>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>

                                <!-- Add Comment -->
                                <HorizontalStackLayout Spacing="10">
                                    <Entry Placeholder="Write a comment..."
                                           Text="{Binding NewCommentContent}"
                                           BackgroundColor="White"
                                           TextColor="#1c2c38"
                                           HeightRequest="40"
                                           HorizontalOptions="FillAndExpand"/>
                                    <Button Text="Send"
                                            Clicked="OnCommentClicked"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="#4e7c9e"
                                            TextColor="white"
                                            CornerRadius="10"
                                            WidthRequest="80"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>
</ContentPage>
