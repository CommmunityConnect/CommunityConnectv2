<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommunityConnect.Pages.ForumPage"
             Shell.NavBarIsVisible="True"
             Title="Commiunity Forum">

    <ContentPage.Background>
        <LinearGradientBrush EndPoint="1,1">
            <GradientStop Color="#4e7c9e" Offset="0.1" />
            <GradientStop Color="#1c2c38" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>
    <ScrollView> 
    <!-- Main Stack Layout -->
        <StackLayout Padding="20" Spacing="20">
            <!-- Title Label -->
            <Label Text="ðŸ’¬  Community  Forum"
               FontSize="26"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="White"
                   Margin="0,10,0,20"/>

            

            <!-- Forum Categories -->
            <StackLayout Spacing="15">
                <!-- General Discussions -->
                <Frame x:Name="GeneralDiscussionsFrame" CornerRadius="15" Padding="25"  
                   BackgroundColor="white"
                   HasShadow="True">
                    <StackLayout Orientation="Horizontal" Spacing="10" VerticalOptions="Center"  >
                        <Image Source="chat.png" WidthRequest="30" HeightRequest="30"/>
                        <Label Text="General Discussions"
                           FontSize="18"
                           FontAttributes="Bold"
                           
                           VerticalOptions="Center"
                           TextColor="#1c2c38" />
                        <Image Source="right_arrow.png" 
                           HorizontalOptions="EndAndExpand"
                           VerticalOptions="Center"
                           WidthRequest="25" />
                    </StackLayout>
                </Frame>

                <!-- Announcements -->
                <Frame x:Name="AnnouncementsFrame" CornerRadius="15" Padding="25"
                   BackgroundColor="white"
                   HasShadow="True">
                    <StackLayout Orientation="Horizontal" Spacing="10" VerticalOptions="Center"  >
                        <Image Source="announcements.png" WidthRequest="30" HeightRequest="30"/>
                        <Label Text="Announcements"
                           FontSize="18"
                           FontAttributes="Bold"
                            
                           VerticalOptions="Center"
                           TextColor="#1c2c38" />
                        <Image Source="right_arrow.png" 
                           HorizontalOptions="EndAndExpand"
                           VerticalOptions="Center"
                           WidthRequest="25" />
                    </StackLayout>
                </Frame>

                <!-- Missing Persons -->
                <Frame x:Name="MissingPersonsFrame" CornerRadius="15"
                   BackgroundColor="White" 
                   Padding="25"
                   HasShadow="True">
                    <StackLayout Orientation="Horizontal" Spacing="10" VerticalOptions="Center"  >
                        <Image Source="missing.png" WidthRequest="30" HeightRequest="30"/>
                        <Label Text="Missing Persons"
                           FontSize="18"
                           FontAttributes="Bold"
                           
                           VerticalOptions="Center"
                           TextColor="#1c2c38" />
                        <Image Source="right_arrow.png" 
                           HorizontalOptions="EndAndExpand"
                           VerticalOptions="Center"
                           WidthRequest="25" />
                    </StackLayout>
                </Frame>

                <!-- Wanted Persons -->
                <Frame x:Name="WantedPersonsFrame" CornerRadius="15" Padding="25"
                   BackgroundColor="white"  
                   HasShadow="True">
                    <StackLayout Orientation="Horizontal" Spacing="10" VerticalOptions="Center"  >
                        <Image Source="wanted.png" WidthRequest="30" HeightRequest="30"/>
                        <Label Text="Wanted Persons"
                           FontSize="18"
                           FontAttributes="Bold"
                           HorizontalOptions="StartAndExpand"
                           VerticalOptions="Center"
                           TextColor="#1c2c38" />
                        <Image Source="right_arrow.png" 
                           HorizontalOptions="End"
                           VerticalOptions="Center"
                           WidthRequest="25" />
                    </StackLayout>
                </Frame>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>

 