<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommunityConnect.Pages.AdminApprovalPage"
             Title="Admin Approval Page">
    <VerticalStackLayout Padding="20">
        <Label Text="Pending Incidents" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>
        <ListView ItemsSource="{Binding PendingReports}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10">
                            <Label Text="{Binding Title}" FontSize="20" />
                            <Label Text="{Binding Description}" FontSize="14" />
                            <Label Text="{Binding Location}" FontSize="14" />
                            <StackLayout Orientation="Horizontal">
                                <Button Text="Approve" Command="{Binding Source={x:Reference Name=AdminApprovalPage}, Path=BindingContext.ApproveReportCommand}" CommandParameter="{Binding}" />
                                <Button Text="Decline" Command="{Binding Source={x:Reference Name=AdminApprovalPage}, Path=BindingContext.DeclineReportCommand}" CommandParameter="{Binding}" />
                            </StackLayout>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Label Text="No pending incidents" FontSize="18" TextColor="Gray" 
               IsVisible="{Binding PendingReports.Count, Converter={StaticResource IsEmptyConverter}}"/>
    </VerticalStackLayout>
</ContentPage>
