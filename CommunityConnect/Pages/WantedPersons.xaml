<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommunityConnect.Pages.WantedPersons"
             Title="WantedPersons"
             Shell.NavBarIsVisible="True">
    <ContentPage.Background>
        <LinearGradientBrush EndPoint="1,1">
            <GradientStop Color="#4e7c9e" Offset="0.1" />
            <GradientStop Color="#1c2c38" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <StackLayout Padding="15" Spacing="20">
            <!-- Page Title -->
            <Label Text="ðŸš” Wanted Persons"
                   FontSize="26"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="White"
                   Margin="0,10,0,20"/>

            <!-- Search Bar -->
            <Frame BackgroundColor="White" CornerRadius="15" Padding="10" HasShadow="True">
                <SearchBar Placeholder="Search by name, location, or crime..."
                           Text="{Binding SearchQuery, Mode=TwoWay}"
                           BackgroundColor="White"
                           TextColor="#1c2c38"/>
            </Frame>

            <!-- Wanted Persons List -->
            <CollectionView ItemsSource="{Binding WantedPersons}" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="White"
                               BackgroundColor="White"
                               CornerRadius="15"
                               Padding="15"
                               HasShadow="True"
                               Margin="5">

                            <VerticalStackLayout Spacing="10">

                                <!-- Image -->
                                <Frame CornerRadius="10" HasShadow="True" Padding="0" HorizontalOptions="Center">
                                    <Image Source="{Binding Photo}" HeightRequest="180" WidthRequest="180" Aspect="AspectFill"/>
                                </Frame>

                                <!-- Name & Reward -->
                                <Label Text="{Binding FullName}"
                                       FontSize="22"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       TextColor="#1c2c38"/>

                                <Label Text="ðŸ’° Reward Available"
                                       FontSize="16"
                                       FontAttributes="Italic"
                                       HorizontalOptions="Center"
                                       TextColor="Green"
                                       IsVisible="{Binding Reward}"/>

                                <!-- Details -->
                                <Label Text="ðŸš¨ Description"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#1c2c38"/>
                                <Label Text="{Binding Description}"
                                       FontSize="14"
                                       TextColor="Black"/>

                                <Label Text="ðŸ“ Last Seen Location"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#1c2c38"/>
                                <Label Text="{Binding LastSeenLocation}"
                                       FontSize="14"
                                       TextColor="Black"/>

                                <Label Text="ðŸ” Additional Details"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#1c2c38"/>
                                <Label Text="{Binding Details}"
                                       FontSize="14"
                                       TextColor="Black"/>

                                <!-- Report Button -->
                                <Button Text="ðŸ‘€ Report Sightings"
                                        BackgroundColor="Red"
                                        TextColor="White"
                                        CornerRadius="10"
                                        HeightRequest="45"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>
</ContentPage>