<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommunityConnect.Pages.ChangePasswordPage"
             Title="Change Password" BackgroundColor="#4e7c9e">

     

    <VerticalStackLayout Padding="20" Spacing="20">
        <Label Text="Change Password" FontAttributes="Bold" FontSize="25"/>
        <Entry x:Name="CurrentPasswordEntry" 
               Placeholder="Current Password"  PlaceholderColor="LightGrey"
               IsPassword="True" />

        <Entry x:Name="NewPasswordEntry" 
               Placeholder="New Password" PlaceholderColor="LightGray"
               IsPassword="True" />

        <Entry x:Name="ConfirmPasswordEntry" 
               Placeholder="Confirm New Password" PlaceholderColor="LightGray" 
               IsPassword="True" />

        <Button Text="Change Password" Clicked="OnChangePasswordClicked" 
                BackgroundColor="#1c2c38" TextColor="White"/>

    </VerticalStackLayout>
</ContentPage>
