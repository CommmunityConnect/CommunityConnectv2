<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommunityConnect.Pages.EmergencyContactPage"
             Shell.NavBarIsVisible="True"
             Title="EmergencyContactPage"
             >
    <ContentPage.Background>
        <LinearGradientBrush EndPoint="1,1">
            <GradientStop Color="#4e7c9e" Offset="0.1" />
            <GradientStop Color="#1c2c38" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>
    <VerticalStackLayout>
        <!-- Title -->
        <StackLayout>
            <Image Source="alarmicon.png" WidthRequest="30" HeightRequest="30" />
            <Label 
            Text=" Emergency Contacts"
            FontSize="26"
            FontAttributes="Bold"
            TextColor="White"
            HorizontalOptions="Center"
            Margin="0,10,0,20"/>
        </StackLayout>


        <!-- emergency contact Categories -->
        <StackLayout Spacing="15">
            <!-- police emergency -->
            <Frame x:Name="PoliceEmergencyNumberFrame"  CornerRadius="15"
        BackgroundColor="white"
            BorderColor="white"
         Padding="10"
        HasShadow="True">
                <StackLayout Orientation="Horizontal" Spacing="10" VerticalOptions="Center">
                    <Image Source="policeman.png" WidthRequest="30" HeightRequest="30" />
                    <Label Text="Police Emergency  : 10111"
                FontSize="18"
                FontAttributes="Bold"
                HorizontalOptions="StartAndExpand"
                VerticalOptions="Center"
                TextColor="#1c2c38" />
                    
                </StackLayout>
            </Frame>

            <!-- Ambulance or fire -->
            <Frame x:Name="AmbulanceFrame" CornerRadius="15"
        BackgroundColor="white"
            BorderColor="white"
        Padding="10"
        HasShadow="True">
                <StackLayout Orientation="Horizontal" Spacing="10" VerticalOptions="Center">
                    <Image Source="ambulance.png" WidthRequest="30" HeightRequest="30" />
                    <Label Text="Ambulance or fire : 10177 "
                FontSize="18"
                FontAttributes="Bold"
                HorizontalOptions="StartAndExpand"
                VerticalOptions="Center"
                TextColor="#1c2c38" />
                    
                </StackLayout>
            </Frame>

            <!-- Childline -->
            <Frame x:Name="ChildlineFrame" CornerRadius="15"
        BackgroundColor="White"
            BorderColor="White"
        Padding="10"
        HasShadow="True">
                <StackLayout Orientation="Horizontal" Spacing="10" VerticalOptions="Center">
                    <Label Text="Childline : 0800 055 555"
                FontSize="18"
                FontAttributes="Bold"
                HorizontalOptions="StartAndExpand"
                VerticalOptions="Center"
                TextColor="#1c2c38" />
                     
                </StackLayout>
            </Frame>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>