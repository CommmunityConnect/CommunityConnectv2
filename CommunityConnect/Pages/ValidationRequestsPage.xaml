<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CommunityConnect.ViewModel"

             x:Class="CommunityConnect.Pages.ValidationRequestsPage"
             Title="ValidationRequestsPage"
             >
    <ContentPage.BindingContext>
        <local:ValidationRequestsViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <Grid RowDefinitions="*, Auto">
            <!-- Header -->
            <StackLayout Grid.Row="0" Padding="20" BackgroundColor="#1d3557">
                <Label Text="ðŸš¨ Incident Validation Requests"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"/>
            </StackLayout>
            
            <!-- Incident Requests List -->
            <CollectionView Grid.Row="1"
                            ItemsSource="{Binding Requests}"
                            VerticalOptions="FillAndExpand">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="White"
                               CornerRadius="15"
                               Padding="15"
                               HasShadow="True"
                               Margin="10">

                            <VerticalStackLayout Spacing="10">

                                <!-- Incident Type -->
                                <Label Text="{Binding IncidentType}"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="#1d3557"/>

                                <!-- Location & Reporter -->
                                <Label Text="ðŸ“ Location:"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="Gray"/>
                                <Label Text="{Binding Location}"
                                       FontSize="14"
                                       TextColor="Black"/>

                                <Label Text="ðŸ“§ Reporter Email:"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="Gray"/>
                                <Label Text="{Binding ReporterEmail}"
                                       FontSize="14"
                                       TextColor="Black"/>

                                <!-- Image -->
                                <Frame CornerRadius="10"
                                       HasShadow="True"
                                       Padding="0"
                                       BackgroundColor="White"
                                       HorizontalOptions="Center">
                                    <Image Source="{Binding ImageUrl}"
                                           HeightRequest="150"
                                           Aspect="AspectFill"/>
                                </Frame>

                                <!-- Approve & Reject Buttons -->
                                <HorizontalStackLayout Spacing="15" Padding="10">
                                    <Button Text="âœ” Approve"
                                            BackgroundColor="#2a9d8f"
                                            TextColor="White"
                                            CornerRadius="10"
                                            Command="{Binding ApproveRequestCommand}"
                                            CommandParameter="{Binding .}"
                                            HeightRequest="45"
                                            WidthRequest="120"/>

                                    <Button Text="âŒ Reject"
                                            BackgroundColor="#e63946"
                                            TextColor="White"
                                            CornerRadius="10"
                                            Command="{Binding RejectRequestCommand}"
                                            CommandParameter="{Binding .}"
                                            HeightRequest="45"
                                            WidthRequest="120"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Grid Grid.Row="2" BackgroundColor="#f1faee" Padding="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Text="ðŸ  Home"
                        Grid.Column="0"
                        BackgroundColor="Transparent"
                        TextColor="#1d3557"
                        FontSize="16"
                        HorizontalOptions="Center"/>

                <Button Text="âš™ Settings"
                        Grid.Column="1"
                        BackgroundColor="Transparent"
                        TextColor="#1d3557"
                        FontSize="16"
                        HorizontalOptions="Center"/>

                <Button Text="ðŸ”” Alerts"
                        Grid.Column="2"
                        BackgroundColor="Transparent"
                        TextColor="#1d3557"
                        FontSize="16"
                        HorizontalOptions="Center"/>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>