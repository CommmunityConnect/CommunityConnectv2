<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommunityConnect.Pages.MissingPersons"
             xmlns:viewModels="clr-namespace:CommunityConnect.ViewModel"
             Title="MissingPersons"
             Shell.NavBarIsVisible="True">
    <ContentPage.Background>
        <LinearGradientBrush EndPoint="1,1">
            <GradientStop Color="#4e7c9e" Offset="0.1" />
            <GradientStop Color="#1c2c38" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>
    <ContentPage.BindingContext>
        <viewModels:MainViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="20">
            <!-- Search Bar -->
            <SearchBar Placeholder="Search by name, location, or physical features..."
                   Text="{Binding SearchQuery, Mode=TwoWay}"  />

            <!-- Filters Section -->
            <StackLayout Orientation="Horizontal" Spacing="10">
                <!-- Category Picker -->
                <Picker Title="Category"
                    ItemsSource="{Binding Categories}"
                    SelectedItem="{Binding SelectedCategory}" />

                <!-- Sort By Picker -->
                <Picker Title="Sort By"
                    ItemsSource="{Binding SortOptions}"
                    SelectedItem="{Binding SelectedSortOption}" />
            </StackLayout>

            <!-- Profile Cards -->
            <CollectionView ItemsSource="{Binding FilteredPersons}" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Gray" CornerRadius="10" Padding="10" Margin="5">
                            <VerticalStackLayout>
                                <!-- Image -->
                                <Image Source="{Binding Photo}" HeightRequest="100" Aspect="AspectFill" />

                                <!-- Name -->
                                <Label Text="{Binding Name}" FontSize="20" FontAttributes="Bold" />

                                <!-- Age -->
                                <Label Text="{Binding Age}" FontSize="14" />

                                <!-- Description -->
                                <Label Text="{Binding Description}" FontSize="14" LineBreakMode="TailTruncation"/>

                                <!-- Last Seen -->
                                <Label Text="{Binding LastSeenLocation}" FontSize="14" />

                                <!-- Wanted For (if applicable) -->
                                <Label Text="{Binding WantedFor}" FontSize="14" />

                                <!-- Status -->
                                <Label Text="{Binding Status}" FontSize="14" TextColor="Red" FontAttributes="Italic" />

                                <!-- Contact Button -->
                                <Button Text="Report Information"
                                    Command="{Binding BindingContext.ReportCommand, Source={x:Reference Name=MainPage}}"
                                    CommandParameter="{Binding .}" />

                                <!-- Expanded Content -->
                                <StackLayout IsVisible="{Binding IsExpanded}">
                                    <Label Text="{Binding LastKnownLocation, StringFormat='Last Seen: {0}'}" />
                                    <Label Text="{Binding LastSeenDate, StringFormat='Date Reported: {0:MM/dd/yyyy}'}" />
                                    <Label Text="{Binding Status}" />
                                    <Button Text="Contact Authorities" BackgroundColor="Red" TextColor="White" />
                                </StackLayout>
                            </VerticalStackLayout>

                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>