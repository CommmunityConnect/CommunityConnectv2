<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommunityConnect.Pages.HelpPage"
             Title="HelpPage" BackgroundColor="White">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Help and Support"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalOptions="Center"/>
            <Label Text="If you have any questions or need assistance, please contact us at:"
                   FontSize="16"
                   TextColor="Black"
                   HorizontalOptions="Center"
                   LineBreakMode="WordWrap"/>
            <Label Text="support@communityconnect.co.za"
                   FontSize="16"
                   TextColor="Blue"
                   HorizontalOptions="Center"
                   LineBreakMode="WordWrap"/>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>