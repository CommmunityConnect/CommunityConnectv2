<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommunityConnect.Pages.LandingPage"
             xmlns:vm="clr-namespace:CommunityConnect.ViewModel"
             Shell.TabBarIsVisible="False"
             Shell.NavBarIsVisible="False">

    <ContentPage.BindingContext>
        <vm:LandingPageViewModel/>
    </ContentPage.BindingContext>

    <!-- Define the background as a LinearGradientBrush -->
    <ContentPage.Background>
        <LinearGradientBrush EndPoint="1,1">
            <GradientStop Color="#4e7c9e" Offset="0.1" />
            <GradientStop Color="#1c2c38" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid Padding="20">
        <!-- Define rows for layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Logo -->
            <RowDefinition Height="*" />
            <!-- CarouselView -->
            <RowDefinition Height="Auto" />
            <!-- Words (Text) -->
            <RowDefinition Height="Auto" />
            <!-- Button -->
        </Grid.RowDefinitions>

        <!-- Logo at the top -->
        <StackLayout Grid.Row="0" Spacing="10" Padding="20" HorizontalOptions="Center">
            <Image Source="transparentcommunityconnectlogo.png"
                   HeightRequest="150"
                   HorizontalOptions="Center"/>
        </StackLayout>

        <!-- CarouselView for the slideshow -->
        <CarouselView x:Name="slideshow"
                      Grid.Row="1"
                      IndicatorView="{x:Reference indicatorView}"
                      HeightRequest="300"
                      HorizontalOptions="FillAndExpand"
                      VerticalOptions="CenterAndExpand">
            <CarouselView.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>preview.png</x:String>
                    <x:String>staysafe.png</x:String>
                    <x:String>friends.png</x:String>
                    <x:String>young.png</x:String>
                    <x:String>tech.png</x:String>
                </x:Array>
            </CarouselView.ItemsSource>
            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <ContentView>
                        <Image Source="{Binding}" 
                               Aspect="AspectFit" 
                               HorizontalOptions="Center" 
                               VerticalOptions="Center" />
                    </ContentView>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>

        <!-- IndicatorView for the dots -->
        <IndicatorView x:Name="indicatorView"
                       Grid.Row="1"
                       Margin="0,10,0,0"
                       IndicatorsShape="Circle"
                       IndicatorColor="#ccc"
                       SelectedIndicatorColor="#fff"
                       HorizontalOptions="Center"
                       VerticalOptions="End"
                       IndicatorSize="10"/>

        <!-- Words (Text) Section -->
        <Label x:Name="textLabel"
               Grid.Row="2"
               Margin="20,10,20,10"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               TextColor="#fff"
               FontAttributes="Bold"
               FontSize="18"
               Text="Welcome to CommunityConnect! Stay informed and connected."
               HorizontalTextAlignment="Center" />

        <!-- Button for Get Started -->
        <Button Text="Get Started"
                BackgroundColor="#ffcc00"
                Grid.Row="3"
                TextColor="Black"
                HeightRequest="50"
                WidthRequest="250"
                FontSize="18"
                FontAttributes="Bold"
                CornerRadius="25"
                HorizontalOptions="Center"
                VerticalOptions="End"
                Margin="0,20,0,20"
                Clicked="OnGetStartedButtonClicked"/>
    </Grid>
</ContentPage>



